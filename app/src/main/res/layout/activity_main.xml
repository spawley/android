<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/activity_main"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:background="@drawable/orangebackground"
android:gravity="center">


<Button
    android:text="Display Map"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="#FFFFFF"
    android:drawableLeft="@android:drawable/ic_menu_search"
    android:onClick="launchDisplayActivity"
    android:id="@+id/btnDisplayLocation" />

<Button
    android:text="Show Crimes in Local Area"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="#FFFFFF"
    android:layout_marginTop="65dp"
    android:layout_below="@+id/btnDisplayLocation"
    android:drawableLeft="@android:drawable/ic_menu_view"
    android:onClick="launchListActivity"
    android:id="@+id/btnShowListView" />

<Button
    android:text="Enter Location"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="#FFFFFF"
    android:layout_marginTop="65dp"
    android:drawableLeft="@android:drawable/ic_menu_myplaces"
    android:onClick="launchSetupActivity"
    android:id="@+id/btnPickLocation" />

</LinearLayout>

